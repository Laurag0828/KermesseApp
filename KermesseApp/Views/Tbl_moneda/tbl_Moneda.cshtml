@model IEnumerable<KermesseApp.Models.tbl_moneda>

@{
    ViewBag.Title = "Moneda";
}

<h2>Lista de Monedas</h2>

<div class="btn-nuevo">
    <a href="@Url.Action("GuardarMon", "Tbl_moneda")">
        <button type="button" class="btn btn-outline-primary btn-md">
            <i class="fas fa-plus"></i> Nueva Moneda
        </button>
    </a>
</div>

@*Filtro de busqueda*@
@using (Html.BeginForm("FiltroMon", "Tbl_moneda", FormMethod.Post))
{
    <div class="row">

        <div class="form-group col-xs-4 col-md-4">

            @Html.ActionLink("PDF", "ReporteMon", new { tipo = "PDF" }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Word", "ReporteMon", new { tipo = "Word" }, new { @class = "btn btn-info" })
            @Html.ActionLink("Excel", "ReporteMon", new { tipo = "Excel" }, new { @class = "btn btn-success" })

        </div>

        <div class="form-group col-xs-8 col-md-8">

            @*<label for="cadena" class="form-label col-md-2">Busqueda: </label>*@

            <div class="input-group busqueda">
                @Html.TextBox("cadena", null, new { @class = "form-control col-md-6", @placeholder = "Buscar" })
                <button type="submit" class="btn btn-light col-md-2">Buscar</button>
            </div>

        </div>

    </div>
}
<br />

<table class="table table-bordered table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.signo)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.estado)
            </th>*@
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.signo)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>*@
            <td class="col-4">
                @Html.ActionLink("Editar", "EditMon", new { id = item.id_moneda }, new { @class = "btn btn-outline-success btn-sm" }) |
                @Html.ActionLink("Detalle", "VerMon", new { id = item.id_moneda }, new { @class = "btn btn-outline-info btn-sm" }) |
                @Html.ActionLink("Eliminar", "DeleteMon", new { id = item.id_moneda }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
    }

</table>
