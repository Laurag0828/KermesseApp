@model KermesseApp.Models.tbl_usuario

@{
    ViewBag.Title = "Usuario";
}

<div class="card border-secondary formulario">
    @using (Html.BeginForm("GuardarUsuario", "Tbl_usuario", FormMethod.Post))
    {
        <div class="card-header">
            <h2>Nuevo Usuario</h2>
        </div>

        <div class="card-body form-horizontal container-fluid">
            <div class="form-group row">
                <label class="col-md-2"> Usuario:</label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(x => x.usuario, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.usuario, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2"> Nombres del Usuario: </label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(x => x.nombres, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.nombres, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2"> Apellidos del Usuario: </label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(x => x.apellidos, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.apellidos, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2"> Correo del usuario: </label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2">Contraseña: ‏‏‎‎</label>
                <div class="col-md-10">
                    @Html.PasswordFor(x => x.pwd, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.pwd, "", new { @class = "error" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2">Repetir Contraseña:‎ </label>
                <div class="col-md-10">
                    @Html.PasswordFor(x => x.confirmarpwd, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.confirmarpwd, "", new { @class = "error" })
                </div>
            </div>

            <br />

            <div class="form-group row justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-success col-md-2" />
                <input type="reset" value="Cancelar" class="btn btn-danger col-md-2" />
            </div>
        </div>

    }
</div>

<div>
    @Html.ActionLink("Regresar", "ListUsuario")
</div>
