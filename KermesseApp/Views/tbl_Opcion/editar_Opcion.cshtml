@model KermesseApp.Models.tbl_opciones

@{
    ViewBag.Title = "Opción";
}

<div class="card border-secondary formulario">
    @using (Html.BeginForm("actualizar_Opcion", "tbl_Opcion", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card-header">
            <h2>Editar Opción</h2>
        </div>

        <div class="card-body form-horizontal container-fluid">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_opciones)

            <div class="form-group row">
                @Html.LabelFor(x => x.opcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.ValidationMessageFor(x => x.opcion, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.opcion, new { @class = "form-control" })
                </div>
            </div>

            <br />

            <div class="form-group row justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-success col-md-2" />
                <input type="reset" value="Cancelar" class="btn btn-danger col-md-2" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Regresar", "listar_Opcion")
</div>