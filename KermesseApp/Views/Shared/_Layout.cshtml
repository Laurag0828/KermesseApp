<script>
    function agregarfila() {

        var bon = $('#bono option:selected').text();
        var den = $('#denominacion').val();
        var cant = $('#cant_bono').val();
        var subtotal = $('#valor').val();
        var idbon = $('#bono').val();

        console.log(subtotal);

        var m1 = document.getElementById("bono").value;
        var m2 = document.getElementById("cant_bono").value;
        var sub = parseFloat(den) * parseFloat(m2);

        document.getElementById("tablaprueba").insertRow(-1).innerHTML =
            '<td>' + bon + '</td>' +
            '<td>' + den + '</td>' +
            '<td>' + cant + '</td>' +
            '<td>' + sub + '</td>' +
            '<td hidden>' + sub + '</td>' +
            '<td hidden>' + idbon + '</td>' +
            '<td><button type="button" class="btn btn-sm btn-danger borrar"><i class="fas fa-trash-alt"></i></button></td>';

        calcularTotal();
        clearItem();

    }

    function clearItem() {
        $("#bono").val('');
        $("#denominacion").val('');
        $("#cant_bono").val('');

    }

    function eliminarfila() {
        $(document).on('click', '.borrar', function (event) {
            event.preventDefault();
            $(this).closest('tr').remove();
            calcularTotal();
        });
    }

    function calcularTotal() {

        var calcular = 0.00;

        $.each($("#tablaprueba tbody tr"), function () {

            if ($(this).find('td:eq(0)').html() === undefined) {
                console.log("Este está nulo")
            } else {
                var subtotal = $(this).find('td:eq(4)').html()
                console.log(subtotal);
                calcular += parseFloat(subtotal);
            }
        });

        $("#valor").val(calcular);
    }

    function saveIngresoCom(data) {
        return $.ajax({
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: "/tbl_IngresoComunidad/guardar_IngresoComunidada",
            data: data,
            success: function (result) {
                alert(result);
                location.reload();
            },
            error: function () {
                alert("Error!")
            }
        });
    }

    $("#saveIngresoCom").click(function (e) {
        e.preventDefault();

        var detailArr = [];
        detailArr.length = 0;

        $.each($("#tablaprueba tbody tr"), function () {

            if ($(this).find('td:eq(0)').html() === undefined) {
                console.log("Este está nulo")
            } else {
                detailArr.push({
                    id_bono: $(this).find('td:eq(5)').html(),
                    denominacion: $(this).find('td:eq(1)').html(),
                    cantidad: $(this).find('td:eq(2)').html(),
                    subtotal: $(this).find('td:eq(4)').html()
                });
            }

        });

        console.log(detailArr);

        var data = JSON.stringify({
            kermesse: $("#kermesse").val(),
            comunidad: $("#comunidad").val(),
            producto: $("#producto").val(),
            cantidadp: $("#cant_prod").val(),
            preciop: $("#precio_prod").val(),
            total: $("#valor").val(),
            detalle: detailArr
        });

        console.log(data);

        $.when(saveIngresoCom(data)).then(function (response) {
            console.log(response);
        }).fail(function (err) {
            console.log(err);
        });
    });
</script>

