@model IEnumerable<KermesseApp.Models.tbl_bonos>

@{
    ViewBag.Title = "Bono";
}

<h2>Lista de Bonos</h2>

<p>
    @Html.ActionLink("Nuevo bono", "guardar_Bono")
</p>

@*Filtro de busqueda*@
@using (Html.BeginForm("filtrar_Bono", "tbl_Bono", FormMethod.Post))

{   
    <div class="row">

        <div class="form-group col-xs-4 col-md-4">

            @Html.ActionLink("PDF", "#", new { tipo = "PDF" }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Word", "#", new { tipo = "Word" }, new { @class = "btn btn-info" })
            @Html.ActionLink("Excel", "#", new { tipo = "Excel" }, new { @class = "btn btn-success" })

        </div>
    
        <div class="form-group col-xs-8 col-md-8">
            <div class="input-group busqueda">
                @Html.TextBox("cadena", null, new { @class = "form-control col-md-6", @placeholder = "Buscar" })
                <button type="submit" class="btn btn-light col-md-2">Buscar</button>
            </div>
        </div>

    </div>
}
<br />

<table class="table table-bordered table-hover">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td class="col-4">
                @Html.ActionLink("Editar", "editar_Bono", new { id = item.id_bono }, new { @class = "btn btn-outline-success btn-sm" }) |
                @Html.ActionLink("Detalle", "ver_Bono", new { id = item.id_bono }, new { @class = "btn btn-outline-info btn-sm" }) |
                @Html.ActionLink("Eliminar", "eliminar_Bono", new { id = item.id_bono }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
    }

</table>
