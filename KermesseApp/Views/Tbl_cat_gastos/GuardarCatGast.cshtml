@model KermesseApp.Models.tbl_cat_gastos

@{
    ViewBag.Title = "Categoría de Gastos";
}

<div class="card border-secondary formulario">
    @using (Html.BeginForm("GuardarCatGast", "Tbl_cat_gastos", FormMethod.Post))
    {

        <div class="card-header">
            <h2>Nueva Categoría de Gastos</h2>
        </div>

        <div class="card-body form-horizontal container-fluid">

            <div class="form-group row">
                @Html.LabelFor(model => model.nombre_cat, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.nombre_cat, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.nombre_cat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.desc_cat, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(x => x.desc_cat, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.desc_cat, "", new { @class = "text-danger" })
            
                </div>
            </div>

            <br />

            <div class="form-group row justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-success col-md-2" />
                <input type="reset" value="Cancelar" class="btn btn-danger col-md-2" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Regresar", "ListaCatGastos")
</div>

