@model KermesseApp.Models.tbl_ingreso_com

@{
    ViewBag.Title = "Ingreso Comunidad";
}

<div class="card border-secondary formulario">
    @using (Html.BeginForm("update_IngresoComunidad", "tbl_IngresoComunidad", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card-header">
            <h2>Editar Ingreso Comunidad</h2>
        </div>

        <div class="card-body form-horizontal container-fluid">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.id_ingresocom)

            <div class="form-group row">
                @Html.LabelFor(model => model.id_kermesse, "id_kermesse", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.id_kermesse, null, "Seleccione...", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.id_kermesse, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.id_comunidad, "id_comunidad", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.id_comunidad, null, "Seleccione...", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.id_comunidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.id_producto, "id_producto", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.id_producto, null, "Seleccione...", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.id_producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.cant_producto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cant_producto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cant_producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.precio_producto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.precio_producto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.precio_producto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.total_bonos, new { htmlAttributes = new { @class = "form-control", @hidden = "true" } })
                    @Html.ValidationMessageFor(model => model.total_bonos, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="form-group row justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-success col-md-2" />
                <input type="reset" value="Cancelar" class="btn btn-danger col-md-2" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Regresar", "listar_IngresoComunidad")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
