@model KermesseApp.Models.tbl_ingresocom_det

@{
    ViewBag.Title = "Ingreso Comunidad Detalle";
}

<div class="card border-secondary formulario">
    @using (Html.BeginForm("update_IngresoComDet", "tbl_IngresoComunidad", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card-header">
            <h2>Editar Ingreso Comunidad Detalle</h2>
        </div>

        <div class="card-body form-horizontal container-fluid">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_ingresocom_det)

            <div class="form-group row">
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.id_ingresocom, null, "Seleccione...", htmlAttributes: new { @class = "form-select", @hidden = "true" })
                    @Html.ValidationMessageFor(model => model.id_ingresocom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.id_bono, "id_bono", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.id_bono, null, "Seleccione...", htmlAttributes: new { @class = "form-select" })                    @Html.ValidationMessageFor(model => model.id_bono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.denominacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.denominacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.denominacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.subtotal, new { htmlAttributes = new { @class = "form-control", @hidden = "true" } })
                    @Html.ValidationMessageFor(model => model.subtotal, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />

            <div class="form-group row justify-content-center">
                <input type="submit" value="Guardar" class="btn btn-success col-md-2" />
                <input type="reset" value="Cancelar" class="btn btn-danger col-md-2" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Regresar", "ver_IngresoComDet", new { id = Model.id_ingresocom})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
