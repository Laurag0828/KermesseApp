@model KermesseApp.Models.tbl_arqueocaja

@{
    ViewBag.Title = "VistaRptArqueo";
}

<h2>Reporte de Arqueo</h2>

@using (Html.BeginForm("ReporteArqueo", "TblArqueoCaja", FormMethod.Post))
{
    <div class="container">

        <div class="form-group">
            <label>Seleccione la Kermesse: </label>
            @Html.DropDownListFor(model => model.id_kermesse, ViewBag.id_kermesse as SelectList, "Seleccione...", htmlAttributes: new { @class = "form-select" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Generar Reporte</button>
            <button type="reset" class="btn btn-danger">Cancelar</button>
        </div>

    </div>}

