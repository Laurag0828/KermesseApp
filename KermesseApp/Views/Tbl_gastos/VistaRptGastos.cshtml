@model KermesseApp.Models.tbl_gastos

@{
    ViewBag.Title = "VistaRptGastos";
}

<h2>Reporte de Gastos</h2>

@using (Html.BeginForm("ReporteGast", "Tbl_gastos", FormMethod.Post))
{
<div class="container">

    <div class="form-group">
        <label>Seleccione la categoria de gasto: </label>
        @Html.DropDownListFor(model => model.id_cat_gasto, ViewBag.id_cat_gasto as SelectList, "Seleccione...", htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Generar Reporte</button>
        <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>

</div>
}

